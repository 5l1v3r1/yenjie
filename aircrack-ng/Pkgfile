# Description: 	Aircrack Wifi cracking tool kit
# URL: 		https://www.aircrack-ng.org/
# Packager: 	Lin SiFuh
# Maintainer: 
# Depends on: 	autoconf automake libtool shtool openssl libgcrypt ethtool libnl gcc

name=aircrack-ng
version=1.6
release=2
source=(https://download.aircrack-ng.org/$name-$version.tar.gz)

build() {

	cd $name-$version

	sh ./autogen.sh --prefix=/usr
	make
	make DESTDIR=$PKG install
	
        find $PKG \(\
        -iname '*readme*' -o \
        -iname '*changelog*' -o \
        -name '*TODO*' -o \
        -iname '*news*' -o \
        -iname '*license*' -o \
        -iname '*credits*' \
        \) -exec rm -rf '{}' \; || true
        rm -rf $PKG/usr/share/doc

}
