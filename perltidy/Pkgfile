# Description:	A Perl script which indents and reformats Perl scripts
# URL:		http://perltidy.sourceforge.net/
# Packager:	
# Maintainer:	Lin SiFuh, #crux at freenode dot net
# Depends on:

name=perltidy
version=20200110
release=1
source=(https://liquidtelecom.dl.sourceforge.net/project/$name/$version/Perl-Tidy-$version.tar.gz)

build() {

	cd Perl-Tidy-$version
            perl Makefile.PL
            make
            make test
            make DESTDIR=$PKG install

	rm $PKG/usr/lib/perl5/5.28/linux-thread-multi/perllocal.pod
	rm $PKG/usr/lib/perl5/site_perl/5.28/linux-thread-multi/auto/Perl/Tidy/.packlist

}
